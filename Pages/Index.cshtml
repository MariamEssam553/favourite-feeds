@page "/"
@model IndexModel
@{
    ViewData["Title"] = "Homepage";
}

@{
    int pageNumber = (int)ViewData["PageNumber"];
    int totalItems = (int)ViewData["TotalItems"];
    int totalPages = (int)ViewData["TotalPages"];

}

<div class="d-flex flex-wrap">
    @foreach (var item in Model.items4page)
    {
        <script>
            function handleClick() {
                var favBtn = document.querySelector("path");
                if (@item.IsFavorite === "True") {
                    favBtn.setAttribute("fill", "white");
                    @item.IsFavorite = "Fasle";
                } else if (@item.IsFavorite.CompareTo("False") !== 1) {
                    favBtn.setAttribute("fill", "yellow");
                    @item.IsFavorite = "True";
                }
            }

        </script>

        <div class="card text-bg-light m-3" style="width: 25rem;">
            <div class="card-body d-flex flex-column">
                <h4 class="card-title">@item.Text</h4>
                <div class="d-flex justify-content-between">
                    <a asp-page="/XMLpage" asp-route-message="@item.XmlLink" class="btn btn-primary" target="_blank">Link</a>
                    <button id="favoriteBtn" class="btn btn-secondary d-flex align-items-center" onclick="handleClick">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="white" width="16" height="16" class="bi bi-star-fill" viewBox="0 0 16 16">
                            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                        </svg>
                    </button>

                </div>
            </div>
        </div>
    }
</div>

<div class="d-flex flex-column align-items-center">
    <div class="m-3 ">
        Page @pageNumber of @totalPages
    </div>

    <nav aria-label="Page navigation example">
        <ul class="pagination">
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageNumber=@i" class="@(i == pageNumber ? "active" : "")">@i</a>
                </li>

            }
        </ul>
    </nav>
</div>